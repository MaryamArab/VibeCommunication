<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="odu.vibe_communication.Receiver">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="#f6ffa1"
        android:id="@+id/tvMessage"
        android:layout_alignBaseline="@+id/tvAccX"
        android:layout_alignBottom="@+id/tvAccX"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive"
        android:id="@+id/btnReceive"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvAccZ"
        android:layout_toEndOf="@+id/tvAccZ" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/btnStop"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/tvMessage"
        android:layout_alignEnd="@+id/tvMessage"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acc X:"
        android:id="@+id/tvAccX"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acc Y"
        android:id="@+id/tvAccY"
        android:layout_below="@+id/tvAccX"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acc Z"
        android:id="@+id/tvAccZ"
        android:layout_below="@+id/tvAccY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
